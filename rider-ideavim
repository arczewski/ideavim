set history=200
set showcmd
set scrolloff=5
set incsearch

set number relativenumber

nmap [[ <Action>(MethodUp)
nmap ]] <Action>(MethodDown)
nmap ]e <Action>(GotoNextError)
nmap [e <Action>(GotoPreviousError)

nmap gb <Action>(Back)
nmap gD <Action>(GotoTypeDeclaration)
nmap gf <Action>(Forward)
nmap gh <Action>(ShowHoverInfo)
nmap gi <Action>(QuickImplementations)

nmap \b <Action>(ToggleLineBreakpoint)
nmap \n <Action>(ReSharperNavigateTo)
nmap \gf <Action>(GotoFile)
nmap \w <Action>(ActivateToolwindowGroup)
nmap \x <Action>(HideAllWindows)
nmap \tcl <Action>(CloseAllToTheLeft)
nmap \tcr <Action>(CloseAllToTheRight)
nmap \tca <Action>(CloseAllEditorsButActive)


nmap \\c <Action>(CheckinProject)

Plug 'easymotion/vim-easymotion'
set easymotion
nmap \\f <Plug>(easymotion-bd-f)
nmap \\t <Plug>(easymotion-bd-t)
